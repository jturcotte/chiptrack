import { Button, VerticalBox, HorizontalBox } from "sixtyfps_widgets.60";

OverlayDialog := Rectangle {
    callback accepted();
    background: #ffffffC0;
    width: 100%;
    height: 100%;
    // Eat events beside the dialog
    TouchArea {
        width: 100%;
        height: 100%;
    }
    Rectangle {
        background: white;
        border-color: grey;
        border_width: 2px;
        border_radius: 10px;
        width: 80%;
        height: 80%;
        x: width / 0.8 * 0.1;
        y: height / 0.8 * 0.1;
    }
    HorizontalLayout {
        padding_left: width / 0.8 * 0.1;
        padding_top: height / 0.8 * 0.1;
        padding_right: padding_left;
        padding_bottom: padding_top;
        VerticalBox {
            Rectangle {
                @children
            }
            Rectangle {
                vertical-stretch: 1;
            }
            HorizontalBox {
                alignment: end;    
                Button { 
                    text: "OK";
                    clicked => { root.accepted(); }
                }
            }
        }        
    }
}
